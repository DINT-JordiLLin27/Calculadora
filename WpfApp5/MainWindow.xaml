<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Calculadora" MinHeight="600" MinWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>


        <Button Margin="5" Grid.Row="4" Grid.ColumnSpan="3" Tag="0" Click="Button_Click" >
            <TextBlock FontSize="30" FontWeight="DemiBold">0</TextBlock>
        </Button>

        <Border Margin="5" BorderBrush="Black" BorderThickness="2" Grid.ColumnSpan="3">
            <Viewbox Margin="10">
                <TextBlock x:Name="CalculadoraTextBlock"></TextBlock>
            </Viewbox>
        </Border>
        
        
        
    </Grid>
</Window>
